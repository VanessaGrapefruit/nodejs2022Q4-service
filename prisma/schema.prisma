generator Client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url = env("DATABASE_URL")
}

model User {
    id String @id @default(uuid())
    login String
    password String
    version Int @default(1)
    createdAt DateTime @default(now())
    updatedAt DateTime?
}

model Artist {
    id String @id @default(uuid())
    name String
    grammy Boolean @default(false)
    albums Album[]
    tracks Track[]
    //favorites Favorite[]
}

model Album {
    id String @id @default(uuid())
    name String
    year Int
    artist Artist? @relation(fields: [artistId], references: [id])
    artistId String?
    tracks Track[]
    //favorites Favorite[]
}

model Track {
    id String @id @default(uuid())
    name String
    artist Artist? @relation(fields: [artistId], references: [id])
    artistId String?
    album Album? @relation(fields: [albumId], references: [id])
    albumId String?
    duration Int
    //favorites Favorite[]
}

model Favorite {
    id String @id @default(uuid())
    //artist Artist? @relation(fields: [artistId], references: [id])
    artistId String?
    //album Album? @relation(fields: [albumId], references: [id])
    albumId String?
    //track Track? @relation(fields: [trackId], references: [id])
    trackId String?
}